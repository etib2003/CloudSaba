            <script>
                $(document).ready(function () {
                $('#payButton').click(function () {
                    $('#paymentModal').modal('show');
                });

                // Add additional logic here to handle payment confirmation
                $('#confirmPayment').click(function () {
                    // Get values from input fields
                    var phoneNumber = $('#phoneNumber').val();
                    var fullName = $('#fullName').val();
                    var email = $('#email').val();
                    var street = $('#street').val(); // Add these lines for new address details
                    var city = $('#city').val();
                    var houseNumber = $('#houseNumber').val();
                    // Perform validation if needed
                    var totalSum = totalSum;
                    // window.location.href = '/Home/Ordering' +
                    //     '&totalSum=' + totalSum;
                    // Call a function to submit payment and create order
                    submitPaymentAndCreateOrder(street, city, houseNumber, phoneNumber, fullName, email, totalSum);
                });
            });

            function submitPaymentAndCreateOrder(street, city, houseNumber, phoneNumber, fullName, email, totalSum) {
                    // Use AJAX or another method to send payment information to the server
                    event.preventDefault();
                    $.post('/Cart/Pay', {
                        street: street,
                        city: city,
                        houseNumber: houseNumber,
                        phoneNumber: phoneNumber,
                        fullName: fullName,
                        email: email,
                        total: totalSum,
                    }, function (response) {
                        // Handle the response from the server
                        if (response.success) {
                            // Payment successful, close the modal or redirect to a thank you page
                            $('#paymentModal').modal('hide');
                            // Optionally redirect to a thank you page
                        window.location.href = `/PayPal.html?totalSum=${totalSum}`;
                        } else {
                            // Payment failed, display an error message
                            alert('Payment failed. Please try again.');
                        }
                    });
                }
            </script>
        }